{
  "name": "github-secrets-sync",
  "version": "1.0.0",
  "description": "Secure GitHub secret synchronization using Bun/TypeScript",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "bun run src/index.ts",
    "dry-run": "bun run src/index.ts --dry-run",
    "dry-run-verbose": "bun run src/index.ts --dry-run --verbose",
    "typecheck": "tsc --noEmit",
    "push-env": "bun run scripts/push-env.ts",
    "sync": "bun run scripts/sync.ts",
    "sync:dry": "bun run scripts/sync.ts --dry-run",
    "sync:verbose": "bun run scripts/sync.ts --verbose"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
